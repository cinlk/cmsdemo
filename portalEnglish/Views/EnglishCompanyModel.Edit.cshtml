@model CompanyViewModel
@using portalEnglish.ViewModels


<fieldset class="form-group" asp-validation-class-for="Title">
    <label asp-for="Title">@T["title"] <span asp-validation-for="Title"></span></label>
    <input asp-for="Title" class="form-control" />
    <span class="hint">@T["company's name"]</span>
</fieldset>


<fieldset class="form-group" asp-validation-class-for="SubTitle">
    <label asp-for="SubTitle">@T["title"] <span asp-validation-for="SubTitle"></span></label>
    <input asp-for="SubTitle" class="form-control" />
    <span class="hint">@T["company's brief "]</span>
</fieldset>


 

<fieldset class="form-group" asp-validation-class-for="CompanyBackgroundImgUrl">
    <label asp-for="CompanyBackgroundImgUrl">@T["backgroud Image url"] <span asp-validation-for="CompanyBackgroundImgUrl"></span></label>
    <input asp-for="CompanyBackgroundImgUrl" type="url" class="form-control" />
</fieldset>

<fieldset class="form-group" asp-validation-class-for="CompanyProfileImgUrl">
    <label asp-for="CompanyProfileImgUrl">@T["company profile Image url"] <span asp-validation-for="CompanyProfileImgUrl"></span></label>
    <input asp-for="CompanyProfileImgUrl" type="url" class="form-control" />
</fieldset>
